pipeline {
    agent { label 'slaves' }

    environment {
        registry = "sumit010607/newhub"
        registrycredential = "dockerhub"
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'Cloning Git repository...'
                git url: "git@github.com:techylinux/gs-springboot.git", branch: "main"
                echo 'Code cloned successfully.'
            }
        }

        stage('Build, Test & Coverage') {
            steps {
                echo 'Building project and running tests...'
                sh 'mvn -f complete/pom.xml clean verify'
            }
        }

        stage('Publish JaCoCo HTML Report') {
            steps {
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'complete/target/site/jacoco',
                    reportFiles: 'index.html',
                    reportName: 'JaCoCo HTML Report'
                ])
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube analysis'
                withSonarQubeEnv('mysonarqube') {
                    sh '''
                        mvn -f complete/pom.xml sonar:sonar \
                        -Dsonar.projectKey=wezvatech \
                        -Dsonar.projectName=wezvatech \
                        -Dsonar.coverage.jacoco.xmlReportPaths=complete/target/site/jacoco/jacoco.xml
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building and pushing Docker image..."
                script {
                    // Get Maven project version
                    def version = sh(
                        script: "mvn -f complete/pom.xml help:evaluate -Dexpression=project.version -q -DforceStdout",
                        returnStdout: true
                    ).trim()
                    echo "Maven Version: ${version}"

                    // Get the JAR file dynamically
                    def jarName = sh(
                        script: "ls complete/target/*.jar | grep -v 'original' | xargs -n 1 basename",
                        returnStdout: true
                    ).trim()
                    echo "Using JAR: ${jarName}"

                    // Build and push Docker image using environment variables
                    docker.withRegistry('', env.registrycredential) {
                        def imageTag = "${env.registry}:${version}"
                        def myImage = docker.build(imageTag, "--build-arg JAR_FILE=${jarName} complete/")
                        myImage.push()
                        echo "Pushed Docker image: ${imageTag}"
                    }
                }
            }
        }

    } // end of stages
}

